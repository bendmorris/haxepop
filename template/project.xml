<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="{{PROJECT_NAME}}" package="com.example.app" version="1.0.0" company="" />

 	<app file="{{PROJECT_CLASS}}" main="{{PROJECT_CLASS}}" path="bin" />

	<window fps="{{FRAMERATE}}" background="0x333333" />
	<window width="{{WIDTH}}" height="{{HEIGHT}}" resizable="true" unless="mobile" />
	<window fullscreen="true" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="haxepop" />

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" type="image" embed="true" />
	<assets path="assets/audio" rename="audio" include="*.mp3" embed="true" if="flash" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg" embed="true" unless="flash" />
	<assets path="assets/font" rename="font" include="*.ttf" embed="true" />

	<icon path="assets/haxepop.svg" />
</project>
